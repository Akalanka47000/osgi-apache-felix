<!DOCTYPE doc [
<!ENTITY antclasspath SYSTEM "../antclasspath.xml">
]>
<project>

    <target name="clean">
        <delete dir="build"/>
    </target>

    <target name="compile">
        <mkdir dir="build/classes"/>
        <javac srcdir="src" destdir="build/classes">&antclasspath;</javac>
    </target>

    <target name="jar">
        <mkdir dir="build/jar"/>
        <jar destfile="build/jar/http-client.jar" basedir="build/classes">
            <manifest>
                <attribute name="Main-Class" value="osgi.http.client.Activator"/>
            </manifest>
        </jar>
    </target>

    <target name="build">
        <antcall target="clean"/>
        <antcall target="compile"/>
        <antcall target="jar"/>
    </target>

    <target name="run">
        <java jar="build/jar/HelloWorld.jar" fork="true"/>
    </target>

</project>
